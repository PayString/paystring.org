{
  "name": "payid.org",
  "version": "0.0.1",
  "description": "Marketing Website for PayID",
  "homepage": "https://github.com/xpring-eng/payid.org#readme",
  "engines": {
    "node": ">= 12"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "dotenv": "^8.2.0",
    "gatsby": "^2.24.66",
    "gatsby-plugin-manifest": "^2.4.32",
    "gatsby-plugin-offline": "^3.2.29",
    "gatsby-plugin-postcss": "^2.3.13",
    "gatsby-plugin-react-helmet": "^3.3.12",
    "gatsby-plugin-react-svg": "^3.0.0",
    "gatsby-plugin-segment-js": "^3.6.0",
    "gatsby-plugin-typescript": "^2.4.21",
    "lodash.debounce": "^4.0.8",
    "lottie-web": "^5.7.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^6.1.0",
    "tailwindcss": "^1.8.10",
    "tailwindcss-gradients": "^3.0.0",
    "typeface-inter": "^3.15.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^14.11.2",
    "@types/react": "^16.9.49",
    "@types/react-helmet": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-config-prettier": "^6.12.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.21.2",
    "prettier": "^2.1.2",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "@reach/router": "^1.3.4"
  },
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx && stylelint src/css/**/*.css",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix && stylelint src/css/**/*.css --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,md}\"",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpring-eng/payid.org.git"
  },
  "bugs": {
    "url": "https://github.com/xpring-eng/payid.org/issues"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 80,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "env": {
      "node": true,
      "es2020": true
    },
    "plugins": [
      "@typescript-eslint",
      "import",
      "prettier",
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "airbnb-base",
      "airbnb-typescript/base",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "lines-between-class-members": [
        "error",
        "always",
        {
          "exceptAfterSingleLine": true
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }
      ],
      "import/order": [
        "error",
        {
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": false
          }
        }
      ],
      "import/extensions": 0,
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "createClass": "createReactClass",
        "pragma": "React",
        "version": "detect"
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "font-family-name-quotes": "always-where-recommended",
      "function-url-quotes": "always",
      "at-rule-no-vendor-prefix": true,
      "media-feature-name-no-vendor-prefix": true,
      "property-no-vendor-prefix": true,
      "selector-no-vendor-prefix": true,
      "value-no-vendor-prefix": true,
      "declaration-no-important": true,
      "font-weight-notation": "numeric",
      "at-rule-no-unknown": null
    }
  }
}
